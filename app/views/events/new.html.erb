<html>

    <body>
    <!-- ... -->
<h1><div class="p-3 mb-2 bg-info text-white">New EVENTs Creation</div></h1>
    <hr>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <%= label_tag 'Title' %>
        <%= text_field_tag 'title', @event.title %>

        <br /> <br />

        <%= label_tag 'Description' %>
        <%= text_area_tag 'description', @event.description %>

        <br /> <br />
        <%= label_tag 'Start Date' %>
        <%= date_field_tag 'start_date', @event.start_date %>

        <%= label_tag 'Duration' %>
        <%= number_field 'duration', @event.duration %>
        <br /> <br />
        <%= label_tag 'Price' %>
        <%= number_field 'price', @event.price %>
        <br /> <br />
        <%= label_tag 'Title' %>
        <%= text_field_tag 'title', @event.title %>
        <br /> <br />

        <%= submit_tag "Create Event" %>
    <% end %>
    <% if @event.errors.any? %>
        <%=flash.now[:danger] = 'Event could not be created - please check again.'%>

    <ul>
        <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    </ul>
        <% end %>
    <% else %>
        <%=flash[:success] = "Event created !"%>
    <% end %>

    </body>
